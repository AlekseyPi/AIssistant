{
  "manifest_version": 3,
  "name": "AIssistant",
  "version": "1.0",
  "description": "Select text and ask AI about it",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["https://api.openai.com/*"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "autocomplete.js",
        "local-storage.js",
        "openAi.js",
        "extension.js"
      ],
      "css": ["styles.css", "autocomplete.css"]
    }
  ]
}
