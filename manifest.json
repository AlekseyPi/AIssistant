{
  "manifest_version": 2,
  "name": "Write it better",
  "version": "1.0",
  "description": "Get a better version of selected text using ChatGPT API.",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["https://api.openai.com/*"],
  "browser_action": {
    "default_popup": "popup\\popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}
